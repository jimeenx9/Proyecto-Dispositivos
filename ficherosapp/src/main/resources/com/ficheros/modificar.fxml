<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ficheros.ModificarController">
    
    <Label text="Modificar Dispositivo" style="-fx-font-size: 18px;" />
    
    <Label text="ID del Dispositivo:" />
    <TextField fx:id="txtID" editable="false" />

    <Label text="Nueva Marca:" />
    <TextField fx:id="txtMarca" />

    <Label text="Nuevo Modelo:" />
    <TextField fx:id="txtModelo" />

    <Button text="Guardar Cambios" onAction="#guardarCambios" />
    <Button text="Cancelar" onAction="#cerrarVentana" />
    
</VBox>
