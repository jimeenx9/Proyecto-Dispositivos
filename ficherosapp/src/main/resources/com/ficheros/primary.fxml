<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" prefHeight="450.0" prefWidth="650.0"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20px;" 
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ficheros.PrimaryController">

   <!-- TÍTULO DEL PROGRAMA -->
   <Label text="GESTOR DE DISPOSITIVOS" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" />

   <!-- CAMPO DE TEXTO PARA ID -->
   <TextField fx:id="txtID" alignment="CENTER" prefHeight="30.0" prefWidth="400.0"
              promptText="Ingrese ID del dispositivo" 
              style="-fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

   <!-- PRIMER GRUPO DE BOTONES -->
   <HBox alignment="CENTER" spacing="10">
      <Button mnemonicParsing="false" onAction="#añadirDispositivo" text="Añadir Dispositivo" 
              style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" />
      <Button mnemonicParsing="false" onAction="#mostrarDispositivos" text="Mostrar Dispositivos" 
              style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" />
      <Button mnemonicParsing="false" onAction="#buscarDispositivo" text="Buscar Dispositivo" 
              style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" />
   </HBox>

   <!-- SEGUNDO GRUPO DE BOTONES -->
   <HBox alignment="CENTER" spacing="10">
      <Button mnemonicParsing="false" onAction="#eliminarDispositivo" text="Eliminar Dispositivo" 
              style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" />
      <Button mnemonicParsing="false" onAction="#modificarDispositivo" text="Modificar Dispositivo" 
              style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" />
      <Button fx:id="btnEstado" mnemonicParsing="false" onAction="#cambiarEstado" text="Cambiar Estado" 
              style="-fx-background-color: #FFEB3B; -fx-text-fill: black; -fx-font-size: 14px; -fx-padding: 10px;" />
      <Button mnemonicParsing="false" onAction="#cerrarVentana" text="Salir" 
              style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" />
   </HBox>

   <!-- ÁREA DE TEXTO PARA MOSTRAR RESULTADOS -->
   <TextArea fx:id="txtSalida" prefHeight="250.0" prefWidth="550.0" wrapText="true" 
             style="-fx-font-size: 14px; -fx-border-color: #ccc; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

</VBox>
